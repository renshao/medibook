<%= content_tag :div, class: "card clearfix immunisation" do %>

  <h2 class="immu-id">18<span class="small">mth</span></h2>
  <h2 class="title"><%= card.title %></h2>

  <div class="date-container">
    <div class="date-month">
      <span class="date"><%= card.date.strftime('%d') %></span>
      <span class="month"><%= card.date.strftime('%b') %></span>
    </div>
    <div class="year"><%= card.date.strftime('%Y') %></div>
  </div>

  <ul class="symptoms">
    <li class="symptom"><%= icon('medkit') %></li>
    <li class="symptom"><%= icon('stethoscope') %></li>
  </ul>

  <div class="weight-height">
    <span class="weight"><!--
      --><span class="wh">W<span class="dash">-</span></span><span class="number">12</span><span class="unit">kg</span><!--
    --></span>
    <span class="wh">H<span class="dash">-</span></span><span class="number">8.6</span><span class="unit">cm</span>
  </div>

  <div class="doctor"><%= card.doctor %></div>
  <div>&nbsp;</div>
  <div>&nbsp;</div>

<% end %>